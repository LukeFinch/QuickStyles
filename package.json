{
  "name": "QuickStyles",
  "description": "Quickly make more text layers from a selection of different fonts and colours.",
  "author": "Luke Finch",
  "identifier": "com.lukefinch.quickstyles",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/lukefinch/quickstyles"
  },

  "skpm": {
    "name": "QuickStyles",
    "manifest": "src/manifest.json",
    "main": "QuickStyles.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.4.0"
  },
  "dependencies": {
    "skpm": "^1.0.14"
  }
}
